            </script> --}}

            <label for="expirationDate">Hạn sử dụng</label>
            <input type="date" class="form-control" id="expirationDate" name="expirationDate" min="">
        </div>
        <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    </form>
</div>